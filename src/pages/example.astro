---
// Importamos la base de datos y la tabla
import { db, Personas } from 'astro:db';

// Obtenemos todos los registros de la tabla
const personas = await db.select().from(Personas);
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Ejemplo de Tabla con Astro DB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="p-8 bg-gray-50">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-3xl font-bold mb-6">Lista de Personas</h1>
      
      <!-- Tabla con estilos Tailwind -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Nombre
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Edad
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            {personas.map((persona) => (
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  {persona.nombre}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  {persona.edad} a√±os
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
      
      <!-- Contador de registros -->
      <p class="mt-4 text-sm text-gray-600">
        Total de personas: {personas.length}
      </p>
    </div>
  </body>
</html>